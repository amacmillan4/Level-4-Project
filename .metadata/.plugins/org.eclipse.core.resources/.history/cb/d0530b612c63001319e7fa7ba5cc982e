package project.android.bellringing;

//TODO
public class PealTime {

	private int mins; 
	private int hours; 
	private int bells;
	private int waitPeriod;
	
	//Takes in the peal time and bells to  generate the period to wait
	public PealTime(int mins, int hours, int bells) {
		this.mins = mins;
		this.hours = hours;
		this.bells = bells;
	} 
	
	public int getBells() {
		return bells;
	}

	public int getMins() {
		return mins;
	}
	
	public int getHours() {
		return hours;
	}
	
	public int getWaitPeriod() {
		return waitPeriod;
	}

	

}
